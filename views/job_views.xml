<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  

    <record id="job_hunt_job_search" model="ir.ui.view">
      <field name="name">Job search</field>
      <field name="model">job_hunt.job</field>
      <field name="arch" type="xml">
          <search string="Search job">
              <field name="state"/>
              <filter name="group_by_state" string="Group By State" context="{'group_by': 'state'}" />
          </search>
      </field>
    </record>

    <record model="ir.ui.view" id="job_hunt_job_list">
      <field name="name">Job list</field>
      <field name="model">job_hunt.job</field>
      <field name="arch" type="xml">
        <tree>
          <field name="applied_at"/>
          <field name="name"/>
          <field name="company"/>
          <field name="postion_type"/>
          <field name="remote"/>
        </tree>
      </field>
    </record>
    
    <record model="ir.ui.view" id="job_hunt_job_form">
      <field name="name">Job form</field>
      <field name="model">job_hunt.job</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="action_apply" string="Apply"  type="object" class="oe_highlight"
                    invisible='state != "wishlisted"'/>
            
            <button name="register_assissment" string="Add Assessment"  type="object" class="oe_highlight"
                    invisible='state not in ("applied", "assissment", "interview")'/>
            <button name="register_interview" string="Add Interview"  type="object" class="oe_highlight"
                    invisible='state not in ("applied", "assissment", "interview")'/>
            
            <button name="register_offer" string="Add Offer"  type="object" class="oe_highlight"
                    invisible='state != "interview"'/>
            <button name="action_rejecte" string="Rejected"  type="object" class="oe_highlight"
                    invisible='state != "interview"'/>
            
            <button name="action_decline" string="Decline"  type="object" class="oe_highlight"
                    invisible='state != "offer"'/>
            <button name="action_hire" string="Accept"  type="object" class="oe_highlight"
                    invisible='state != "offer"'/>
            
            <button name="action_ghost" string="Ghosted"  type="object" class="oe_highlight"
                    invisible='state != "applied"'/>

            <field name="state" widget="statusbar"
                        statusbar_visible="wishlisted, applied, assissment, interview, offer" />
          </header>
          <sheet>
            <h2>
              <group>
                <field name="name"/>
                <field name="company"/>
              </group>
            </h2>
            <group>
              <group>
                <field name="postion_type"/>
                <field name="remote"/>
              </group>
              <group>
                <field name="applied_at"/>
                <field name="apply_date"/>
              </group>
            </group>
            <notebook>
              <page string="Assessment">
                <field name="assissment_ids">
                  <tree create="false" editable="bottom">
                    <field name="name" />
                    <field name="deadline" />
                    <field name="is_done" />
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="job_hunt_job_action">
      <field name="name">Job Action</field>
      <field name="res_model">job_hunt.job</field>
      <field name="view_mode">tree,form</field>
      <field name="context">
        {
            "search_default_group_by_state": 1,
        }
    </field>
    </record>


  
</odoo>
